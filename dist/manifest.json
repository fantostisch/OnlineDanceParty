{
    "manifest_version": 2,
    "name": "Online Dance Party",
    "version": "1.1.0",
    "description": "Play Just Dance Now with friends at different locations.",
    "homepage_url": "https://github.com/fantostisch/OnlineDanceParty",
    "icons": {
        "48": "img/icon/icon-48.png",
        "96": "img/icon/icon-96.png",
        "128": "img/icon/icon-128.png"
    },
    "// declarativeContent is necessary for Chrome": "",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*.justdancenow.com/*",
        "storage",
        "declarativeContent"
    ],
    "background": {
        "page": "./relay.html"
    },
    "page_action": {
        "browser_style": true,
        "default_icon": {
            "48": "img/icon/icon-48.png",
            "96": "img/icon/icon-96.png",
            "128": "img/icon/icon-128.png"
        },
        "default_title": "Online Dance Party",
        "default_popup": "popup.html",
        "show_matches": ["*://*.justdancenow.com/*"]
    }
}
